#!/usr/bin/env ruby

require 'compass'
Compass.add_project_configuration('config.rb')

### Compile

compile '/styles/_*' do
  # don't compile partials
end
compile '/styles/styles/' do
  filter :sass, Compass.sass_engine_options
end

compile '/pdf/' do
  filter :erb
  filter :pdfkit
end

compile '/chapters/*' do
  filter :kramdown
  layout 'default'
end

compile '*' do
  if item.binary?
    # donâ€™t filter binary items
  else
    filter :erb
    layout 'default'
  end
end

### Routes

route '/styles/_*' do
  # don't output partials
end

route '/styles/styles/' do
  '/styles.css'
end

route '/pdf/' do
  '/cas-documentation.pdf'
end

route '*' do
  if item.binary?
    # Write item with identifier /foo/ to /foo.ext
    item.identifier.chop + '.' + item[:extension]
  else
    # Write item with identifier /foo/ to /foo/index.html
    item.identifier + 'index.html'
  end
end

### Layouts

layout '*', :erb
